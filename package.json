{
  "name": "claude-agent-mcp-server",
  "version": "1.0.0",
  "description": "MCP server to expose Claude Agent SDK capabilities via Model Context Protocol",
  "type": "module",
  "main": "./build/index.js",
  "bin": {
    "claude-agent-mcp-server": "./build/index.js"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE",
    ".env.example"
  ],
  "scripts": {
    "build": "tsc && chmod +x build/index.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "watch": "tsc --watch",
    "dev": "tsx src/index.ts",
    "start": "node build/index.js",
    "clean": "rm -rf build",
    "test:mcp": "npx @modelcontextprotocol/inspector node build/index.js",
    "test:list": "echo '{\"jsonrpc\":\"2.0\",\"id\":1,\"method\":\"tools/list\",\"params\":{}}' | node build/index.js",
    "test:query": "echo '{\"jsonrpc\":\"2.0\",\"id\":2,\"method\":\"tools/call\",\"params\":{\"name\":\"query\",\"arguments\":{\"prompt\":\"Hello\"}}}' | node build/index.js 2>&1"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "claude",
    "anthropic",
    "agent-sdk",
    "ai-agent"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.40.0",
    "@anthropic-ai/bedrock-sdk": "^0.25.0",
    "@anthropic-ai/vertex-sdk": "^0.14.0",
    "@modelcontextprotocol/sdk": "^1.20.1",
    "dotenv": "^17.2.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
